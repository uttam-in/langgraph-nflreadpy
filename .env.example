# ============================================================================
# NFL Player Performance Chatbot - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# OpenAI API Configuration
# ----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# ----------------------------------------------------------------------------
# Data Source Configuration
# ----------------------------------------------------------------------------
# Data source priorities (lower number = higher priority)
# 1 = highest priority, 3 = lowest priority
KAGGLE_PRIORITY=2
NFLREADPY_PRIORITY=1
ESPN_PRIORITY=3

# Data paths
KAGGLE_DATASET_PATH=./data/nfl_player_stats.csv
KAGGLE_DATA_PATH=./data/kaggle

# Timeouts (in seconds)
KAGGLE_TIMEOUT=30
NFLREADPY_TIMEOUT=30
ESPN_API_TIMEOUT=10

# Retry configuration
DATA_SOURCE_MAX_RETRIES=3
DATA_SOURCE_RETRY_DELAY=1.0
DATA_SOURCE_RETRY_BACKOFF=2.0

# Enable fallback to alternative data sources on failure
DATA_SOURCE_ENABLE_FALLBACK=true

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------
# Kaggle cache settings
KAGGLE_CACHE_ENABLED=true
WARM_KAGGLE_CACHE_ON_STARTUP=true

# NFLReadPy cache settings
NFLREADPY_CACHE_TTL_HOURS=24

# Query cache settings
QUERY_CACHE_CAPACITY=100
QUERY_CACHE_TTL_HOURS=1

# Cache directory
CACHE_DIR=./.cache

# ----------------------------------------------------------------------------
# Memory Configuration
# ----------------------------------------------------------------------------
# Maximum number of conversation turns to remember
MAX_HISTORY_TURNS=10

# Maximum tokens for conversation context
MAX_CONTEXT_TOKENS=4000

# Include system messages in context
INCLUDE_SYSTEM_MESSAGES=false

# ----------------------------------------------------------------------------
# Workflow Configuration
# ----------------------------------------------------------------------------
# Maximum workflow iterations
WORKFLOW_MAX_ITERATIONS=10

# Workflow timeout (in seconds)
WORKFLOW_TIMEOUT=120

# Enable streaming responses
WORKFLOW_ENABLE_STREAMING=true

# Enable debug mode
WORKFLOW_DEBUG=false

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: specific log file name (auto-generated if not set)
# LOG_FILE=chatbot.log

# Log directory
LOG_DIR=logs

# Enable console output
LOG_CONSOLE=true

# Use detailed log format (includes file/line info)
LOG_DETAILED=false

# Component-specific log levels
WORKFLOW_LOG_LEVEL=INFO
NODES_LOG_LEVEL=INFO
DATA_SOURCES_LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# Chainlit Configuration
# ----------------------------------------------------------------------------
CHAINLIT_PORT=8000
CHAINLIT_HOST=0.0.0.0
CHAINLIT_ENABLE_TELEMETRY=false
CHAINLIT_SESSION_TIMEOUT=3600

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development
